<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AdminInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/sapphire_border"
        android:backgroundTint="#80FFFFFF">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Information"
            android:textAlignment="center"
            android:textColor="@color/Sapphire"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effortlessly Share Updates by Uploading Images or Inputting Text for Latest News, Information, and Promotions."
            android:textAlignment="center"
            android:textColor="@color/Sapphire"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:id="@+id/uploadSIImage"
            android:src="@drawable/baseline_photo_size_select_actual_24"
            />

        <Button
            android:id="@+id/uploadSIBtn"
            app:cornerRadius="30dp"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="Upload Image"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/uploadSIText"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/sapphire_border"
            android:drawablePadding="2dp"
            android:hint="What's new?"
            android:padding="10dp"
            android:textColor="@color/grey" />

        <Button
            android:id="@+id/uploadSITextBtn"
            app:cornerRadius="30dp"
            android:layout_width="170dp"
            android:layout_height="70dp"
            android:text="Post Message"
            android:textSize="18sp"
            android:layout_margin="5dp"
            android:layout_gravity="center"/>



    </LinearLayout>

</FrameLayout>
