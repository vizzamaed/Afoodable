<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountFragment"
    android:background="@drawable/seller_dashback">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/skyblue_border"
            android:backgroundTint="#80FFFFFF">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textAlignment="center"
                android:textColor="@color/Sapphire"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/searchBusinessName"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/skyblue_border"
                android:drawablePadding="8dp"
                android:hint="Business Name"
                android:padding="8dp"
                android:textColor="@color/grey" />

            <Button
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                android:text="Business"
                android:id="@+id/searchButton"
                android:textSize="18sp"
                app:cornerRadius="30dp"/>

            <TextView
                android:id="@+id/accountBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:padding="5dp"
                android:text="Business Name"
                android:textStyle="bold"
                android:textColor="@color/Sapphire"
                android:textSize="16sp"/>



            <TextView
                android:id="@+id/accountBusinessLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:text="Complete Address"
                android:textColor="@color/Sapphire"
                android:textSize="16sp"/>

            <Button
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:text="Edit Seller Profile"
                android:id="@+id/sellerProfileSettings"
                android:textSize="18sp"
                app:cornerRadius="30dp"/>

            <Button
                    android:layout_width="300dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="5dp"
                    android:text="Buyer Dashboard"
                    android:id="@+id/buyerDashboardBtn"
                    android:textSize="18sp"
                    app:cornerRadius="30dp"/>


            </LinearLayout>

    </ScrollView>

</FrameLayout>