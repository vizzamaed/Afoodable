<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewCart"
    android:background="@drawable/buyer_dashback">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:background="@drawable/skyblue_border">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailItemName"
            android:text="Item Name"
            android:layout_marginTop="0dp"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:textColor="@color/Sapphire"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/detailImage"
            android:padding="2dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_insert_photo_24"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price :"
                android:textColor="@color/Sapphire"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Price"
                android:layout_gravity="center"
                android:id="@+id/detailItemPrice"
                android:textSize="18sp"
                android:textColor="@color/Sapphire"/>

            <TextView
                android:id="@+id/kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/kg"
                android:padding="10dp"
                android:textColor="@color/Sapphire"
                android:textSize="18sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/descriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description :"
            android:textColor="@color/Sapphire"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/detailItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Description"
            android:textColor="@color/Sapphire"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/shopTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop :"
                android:textColor="@color/Sapphire"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/detailItemBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="businessName"
                android:textColor="@color/Sapphire"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/locationTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location :"
                android:textColor="@color/Sapphire"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/detailItemBusinessLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="businessLocation"
                android:textColor="@color/Sapphire"
                android:textSize="18sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Price:"
                android:textColor="@color/Sapphire"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/totalPriceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:textColor="@color/Sapphire"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/voucher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher Code:"
                android:textColor="@color/Sapphire"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="10dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/skyblue_border"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detailItemBusinessLocation"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/skyblue_border"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/decreaseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_remove_circle_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:rotation="180"/>


            <TextView
                android:id="@+id/quantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/Sapphire"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/increaseBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_add_circle_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:rotation="180" />
        </LinearLayout>


        <!-- Buttons in a horizontal layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <Button
                android:id="@+id/placeItemBtn"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginStart="8dp"
                android:drawableLeft="@drawable/baseline_shopping_cart_24"
                android:drawablePadding="3dp"
                android:padding="20dp"
                android:text="Place Item"
                android:textSize="18sp"
                app:cornerRadius="30dp"/>


           <Button
               android:id="@+id/placeDeleteBtn"
               android:layout_width="200dp"
               android:layout_height="wrap_content"
               android:layout_marginStart="8dp"
               android:drawableLeft="@drawable/baseline_delete_24"
               android:drawablePadding="3dp"
               android:padding="20dp"
               android:text="Delete Item"
               android:textSize="18sp"
               app:cornerRadius="30dp"/>



        </LinearLayout>

    </LinearLayout>

</ScrollView>
