<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewSellerCompleted"
    android:background="@drawable/seller_dashback">

    <LinearLayout
        android:layout_width="350dp"
        android:layout_marginTop="40dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:background="@drawable/skyblue_border">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detailItemName"
            android:text="Item Name"
            android:layout_marginTop="0dp"
            android:textSize="24sp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:textColor="@color/Sapphire"/>

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/detailImage"
            android:padding="2dp"
            android:layout_gravity="center"
            android:src="@drawable/baseline_insert_photo_24"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/priceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price :"
                android:textColor="@color/Sapphire"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Price"
                android:layout_gravity="center"
                android:id="@+id/detailItemPrice"
                android:textSize="18sp"
                android:textColor="@color/Sapphire"/>

            <TextView
                android:id="@+id/kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/kg"
                android:padding="10dp"
                android:textColor="@color/Sapphire"
                android:textSize="18sp"
                android:textAlignment="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/descriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description :"
            android:textColor="@color/Sapphire"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/detailItemDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="Description"
            android:textColor="@color/Sapphire"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buyerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buyer:"
                android:textColor="@color/Sapphire"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/detailBuyer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="userName"
                android:textColor="@color/Sapphire"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/phoneTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone :"
                android:textColor="@color/Sapphire"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/detailPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="phone"
                android:textColor="@color/Sapphire"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
