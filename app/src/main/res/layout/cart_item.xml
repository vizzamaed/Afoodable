<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:id="@+id/recCardProduct"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="160dp"
        android:id="@+id/above">
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/recImageProduct"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/checkBox"
            android:layout_toRightOf="@+id/checkBox"
            android:padding="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_insert_photo_24"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:id="@+id/recProductName"
            android:text="Item Name"
            android:textColor="@color/Sapphire"
            android:textSize="18dp"
            android:layout_toEndOf="@+id/recImageProduct"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/recProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@color/Sapphire"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_below="@+id/recProductName"
            android:layout_alignStart="@+id/recProductName"
            android:layout_marginTop="2dp" />



        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/recProductDescription"
            android:text="Description"
            android:textColor="@color/Sapphire"
            android:textSize="8sp"
            android:layout_toEndOf="@+id/recImageProduct"
            android:layout_below="@id/recProductPrice"
            android:maxLines="0"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/recBusinessName"
            android:text="businessName"
            android:textColor="@color/Sapphire"
            android:textSize="8sp"
            android:layout_toEndOf="@+id/recImageProduct"
            android:layout_below="@id/recProductPrice"
            android:maxLines="0"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="140dp"
            android:layout_height="12dp"
            android:id="@+id/recBusinessLocation"
            android:text="businessLocation"
            android:textColor="@color/Sapphire"
            android:textSize="8sp"
            android:layout_toEndOf="@+id/recImageProduct"
            android:layout_below="@id/recProductPrice"
            android:maxLines="0"
            android:layout_marginStart="20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recProductPrice"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:background="@drawable/skyblue_border"
            android:layout_toEndOf="@+id/recImageProduct">

            <ImageButton
                android:id="@+id/decreaseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_remove_circle_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:rotation="180"/>


            <TextView
                android:id="@+id/quantityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="18sp"
                android:textColor="@color/Sapphire"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageButton
                android:id="@+id/increaseButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_add_circle_24"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:rotation="180" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/blue"
            android:gravity="center_vertical">

            <TextView
                android:layout_marginStart="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voucher Code:"/>

            <EditText
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:background="@drawable/skyblue_border"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>




    </RelativeLayout>



</androidx.cardview.widget.CardView>