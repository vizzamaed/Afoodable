<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminInfoFragment"
    android:background="@drawable/admin_dashback">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/sapphire_border">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Share Information"
            android:textAlignment="center"
            android:textColor="@color/Sapphire"
            android:textSize="20sp" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="15dp"
            android:padding="5dp"
            android:text="Share latest updates/notice via image or text."
            android:textColor="@color/Sapphire"
            android:textSize="16sp"/>

        <Button
            android:id="@+id/admin_view_seller"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Upload Image"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:cornerRadius="20dp"/>

        <Button
            android:id="@+id/admin_upload_seller"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Upload Message"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:cornerRadius="20dp"/>



    </LinearLayout>



</FrameLayout>