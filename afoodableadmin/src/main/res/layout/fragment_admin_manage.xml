<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminManageFragment"
    android:background="@drawable/admin_dashback">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/sapphire_border"
        android:layout_marginBottom="50dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Seller Account"
            android:textAlignment="center"
            android:textColor="@color/Sapphire"
            android:textSize="20sp" />

        <Button
            android:id="@+id/admin_view_seller"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="View Seller List"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:cornerRadius="20dp"/>

        <Button
            android:id="@+id/admin_upload_seller"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Add Seller Account"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:cornerRadius="20dp"/>

        <Button
            android:id="@+id/admin_update_seller"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Edit Seller Account"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:cornerRadius="20dp"/>

        <Button
            android:id="@+id/admin_delete_seller"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Delete Seller Account"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            app:cornerRadius="20dp"/>


    </LinearLayout>


</FrameLayout>